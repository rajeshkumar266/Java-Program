package Swap;

import java.util.Scanner;

public class Swapping_Method {

	public static void main(String[] args) {
		
		//int a=5,b=2;
		
		Scanner swap = new Scanner(System.in);
		
		System.out.println("Enter A First Value: ");
		int a = swap.nextInt();
		
		System.out.println("Enter A Second Value: ");
		int b = swap.nextInt();
		
		a = (a^b);
		
		b = (b^a);
		
		a = a^b;
		
		System.out.println("b Swapped to a : " + a);
		System.out.println("a Swapped to b : " + b);
		
		// Arithmetic operator will be used
		
		System.out.println("Enter A First Value: ");
		int v1 = swap.nextInt();
		
		System.out.println("Enter A Second Value: ");
		int v2 = swap.nextInt();
		
		v1 = v1 + v2;
		
		v2 = v1 - v2;
		
		v1 = v1 - v2;
		
		System.out.println("v2 Swapped to v1: " + v1);
		System.out.println("v1 Swapped to v2: " + v2);
	}

}
